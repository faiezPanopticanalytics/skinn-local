{% paginate blog.articles by 5 %}
<div class="blog">
  <div class="header">
    <div class="fc-inner">
      <div class="rr-bg"></div>
      <h1 class="rr-title">{{blog.title}}</h1>
    </div>
  </div>

  <div class="content-loop container">
    {% for article in blog.articles %}
      {% assign temp = forloop.index | modulo: 2 %}
      
      {% if temp == 0 %}
        {% include 'blog_img_left' %}
      {% else %}
        {% include 'blog_img_right' %}
      {% endif %}
      
      {% if forloop.first %}
        </div>
        <div class="cta-bar">
          {% section 'blog_klaviyo_form' %}
        </div>
        <div class="content-loop container">
      {% endif %}
    {% endfor %}
  </div>
<div class="blog-pagination">

  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}
  </div>
</div>
{% endpaginate %}
