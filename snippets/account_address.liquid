<div class="address">
  <div class="row">
    <div class="col-12">
      {% if address.id == customer.default_address.id %}
        <p class="default_tag">Default</p>
      {% endif %}
      
      <div class="address_data">
        <p>{{ address.first_name }} {{ address.last_name }}</p>
        <p>{{ address.address1 }}</p>
        <p>{{ address.address2 }}</p>
        <p>{{ address.city }} {{ address.province_code }} {{ address.zip }}</p>
        <p>{{ address.country }}</p>
      </div>
    </div>
    <div class="col-12 col-md-6 mt-2">
      <button class="btn btn-primary btn-block" @click="showEditForm('{{address.id}}')">
        Edit
      </button>
    </div>
    
    {% unless address.id == customer.default_address.id %}
      <div class="col-12 col-md-6 mt-2">
        <form
          class="address-delete-form"
          method="post"
          action="/account/addresses/{{ address.id }}"
          data-confirm-message="Are you sure that you want to delete this address?"
          @submit="deleteConfirm"
        >
          <input type="hidden" name="_method" value="delete" />
          <button type="submit" class="btn btn-dark btn-block">
            Delete
          </button>
        </form>
      </div>
    {% endunless %}
  </div>
</div>

<div class="col-12 edit_address"  v-if="editAddressId == '{{address.id}}'" v-cloak>
  {% form 'customer_address', address, class: "row" %}
    {% for error in form.errors %}
        {{ error }}
    {% endfor %}
    
    <edit-address :address='{{ form | json }}' @close="editAddressId = ''">
      {{ all_country_option_tags }}
    </edit-address>
  {% endform %}
</div>
