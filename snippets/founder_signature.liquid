{% if page.metafields.custom_fields["founder_signature"] != blank %}
  {% capture img %}
    {% include 'cf-image' with image: page.metafields.custom_fields["founder_signature"], size: '100x100', print: 'url' %}
  {% endcapture %}
  
  {% assign img_lazy =  img | replace: '_100x100', '_{width}x' %}
  
  <img
      src="{{ img }}"
      data-src="{{img_lazy}}"
      data-sizes="auto"
      class="lazyload" 
      alt="Dimitri James"
      data-widths="[720, 900, 1080, 1296, 1512, 1728, 2048]"
      data-aspectratio=""
  />
{% endif %}
