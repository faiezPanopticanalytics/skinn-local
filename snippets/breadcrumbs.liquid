{% unless template.name == 'index' or template.name == 'cart' %}
<nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
  <div class="container">
      
    <a href="/" title="Home">Home</a>

    {% if template.name == 'product' %}

        {% if collection %}
          <span aria-hidden="true" class="breadcrumb__sep">/</span>
          {% if collection.handle %}
            {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
            {{ collection.title | link_to: url }}
          {% endif %}
        {% endif %}
        <span aria-hidden="true" class="breadcrumb__sep">/</span>
        <span>{{ product.title }}</span>

      {% elsif template.name == 'collection' and collection.handle %}

        <span aria-hidden="true" class="breadcrumb__sep">/</span>
        {% if current_tags %}
          {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
          {{ collection.title | link_to: url }}
          <span aria-hidden="true" class="breadcrumb__sep">/</span>
          <span>{{ current_tags | join: " + " }}</span>
        {% else %}
          <span>{{ collection.title }}</span>
        {% endif %}

      {% elsif template.name == 'blog' %}

        <span aria-hidden="true" class="breadcrumb__sep">/</span>
        {% if current_tags %}
          {{ blog.title | link_to: blog.url }}
          <span aria-hidden="true" class="breadcrumb__sep">/</span>
          <span>{{ current_tags | join: " + " }}</span>
        {% else %}
        <span>{{ blog.title }}</span>
        {% endif %}

      {% elsif template.name == 'article' %}

        <span aria-hidden="true" class="breadcrumb__sep">/</span>
        {{ blog.title | link_to: blog.url }}
        <span aria-hidden="true" class="breadcrumb__sep">/</span>
        <span>{{ article.title }}</span>

      {% elsif template.name == 'page' %}

      <span aria-hidden="true" class="breadcrumb__sep">/</span>
      <span>{{ page.title }}</span>

      {% else %}

      <span aria-hidden="true" class="breadcrumb__sep">/</span>
      <span>{{ page_title }}</span>

      {% endif %}
      
      {% if template.name contains 'product' %}
        {% assign nextprevCount = 0 %}
        {% if collection.previous_product%}
        {% assign nextprevCount = nextprevCount | plus: 1 %}
        <strong><span> <a href="{{collection.previous_product.url}}" class="nextprev"><i class="fa fa-caret-left"></i></a></span></strong>
        {% endif %}

        {% if collection.next_product %}
        {% assign nextprevCount = nextprevCount | plus: 1 %}
        <strong><span> <a href="{{collection.next_product.url}}" class="{% if nextprevCount == 2%}leftmarg{%endif%} nextprev"><i class="fa fa-caret-right"></i></a></span></strong>
        {% endif%}
      {% endif %}
  </div>
</nav>
{% endunless %}
